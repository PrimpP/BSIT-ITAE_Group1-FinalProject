                text-align: center;
            }

            #wrapper{
                margin: 20px;
            }

            #flex-container{
                display: flex;
                justify-content: center;
            }

            #BodyH3{
                padding: 40px 0 0 40px;
            }

            .card{
                border: 4px solid darkblue;
                width: 20em;
                height: 20em;
                margin: 10px;
                border-radius: 20px;
            }

            .img-container{
                text-align: center;
            }

            div img{
                margin: 10px 0 50px 0;
                width: 100px;
                height: 100px;
            }

            a img{
                width: 35px;
                height: 35px;
		    }

            .heading{
                background-color: #ff5757;
                width: 100%;
                margin-top: -10px;
		    }

            .search {
                width: 25px;
                height: 25px;
                margin-top: -20px;
		    }

            .bell {
                margin-top:-20px;
                margin-right: 10px;
            }

            .right {
                float: right;
                margin-top: -18px;
                padding-bottom: -10px;
		    }

            #menuToggle {
                display: block;
                position: relative;
                margin-top: 10px;
                top: 15px;
                left: 15px;
                z-index: 1;
                -webkit-user-select: none;
                user-select: none;
            }

            #menuToggle a:hover {
                color: #ff5757;
            }

            #menuToggle a {
                text-decoration: none;
                color:white;
                transition: color 0.3s ease;
            }

            #menuToggle input {
                display: block;
                width: 40px;
                height: 32px;
                margin-top: 10px;
                position: absolute;
                top: -7px;
                left: -5px;
                cursor: pointer;
                opacity: 0; 
                z-index: 2; 
                -webkit-touch-callout: none;
            }

            #menuToggle span {
                display: block;
                width: 33px;
                height: 4px;
                margin-bottom: 5px;
                position: relative;
                background: black;
                border-radius: 3px;
                z-index: 1;
                transform-origin: 4px 0px;
                transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                background 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                opacity 0.55s ease;
            }

            #menuToggle span:first-child {
                transform-origin: 0% 0%;
            }

            #menuToggle span:nth-last-child(2) {
                transform-origin: 0% 100%;
            }

            #menuToggle input:checked ~ span {
                opacity: 1;
                transform: rotate(45deg) translate(-2px, -1px);
                background: white;
            }

            #menuToggle input:checked ~ span:nth-last-child(3) {
                opacity: 0;
                transform: rotate(0deg) scale(0.2, 0.2);
            }

            #menuToggle input:checked ~ span:nth-last-child(2) {
                transform: rotate(-45deg) translate(0, -1px);
            }

            #menu {
                position: absolute;
                width: 150px;
                margin: -100px 0 0 -30px;
                padding: 30px;
                padding-top: 125px;
                background: black;
                list-style-type: none;
                -webkit-font-smoothing: antialiased;
                transform-origin: 0% 0%;
                transform: translate(-100%, 0);
                transition: transform 0.5s cubic-bezier(0.10,0.1,0.05,0.8);
            }

            #menu li {
                padding: 10px 0;
                font-size: 22px;
            }

            #menuToggle input:checked ~ ul {
                transform: none;
            }

            @media screen and (max-width: 480px) {
                #navH1 {
                    font-size: 40px;
                    width: 80%;
                    margin: auto;
                }
                #bodyH1{
                    font-size: 35px;
                }
                #BodyH3{
                    font-size: 15px;
                    margin-bottom: 10px;

                }
                #flex-container{
                    display: block;
                }
                .card {
                    margin: auto;
                    margin-bottom: 25px;
                    width: 15.5em;
                }

            }

        </style>
    </head>
